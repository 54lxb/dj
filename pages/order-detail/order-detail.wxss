/* pages/order-detail/order-detail.wxss */
page {
  display: block;
  min-height: 100%;
  background-color: #f5f5f5;
}
.order-detail-tab{
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 32rpx;
}
.order-detail-tab .tab-item{
    padding: 25rpx 0;
    flex: 1;
    text-align: center;
    box-sizing: border-box;
} 
.order-detail-tab .tab-item.active{
    border-bottom: 3px solid #e61773;
    color: #e61773;
}
@import "../../css/font.wxss";