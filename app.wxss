/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #eee;
} 
.slider {
    display: block;
    height: 400rpx;
}
.slider .slide-image{
    width: 100%;
    height: 100%;
}
.slider .default-slide-image{
    width: 70rpx;
    height: 70rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}
.clearfix::after{
    content: "";
    display: table!important;
    clear: both;
}